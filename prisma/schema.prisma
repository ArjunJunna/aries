generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  name     String?
  password String? @unique
  image    String?
  teams    Team[]

  @@map("users")
}

model Team {
  id   Int    @id @default(autoincrement())
  name String
  user   User @relation(fields: [userId], references: [id])
  userId Int

  @@map("teams")
}
